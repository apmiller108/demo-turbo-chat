<div class="container">
  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }, data: { turbo: false }) do |f| %>
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'form-control', autocomplete: 'email' } %>
    </div>

    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'form-control', autocomplete: 'current-password' } %>
    </div>

    <div class="form-group">
      <%= f.button :submit, "Log in", class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>

  <% if User.all.present? %>
    <h2> Seeded users </h2>
    <% User.all.each do |u| %>
      <%= u.email %>
      <p> Password: password </p>
    <% end %>
  <% else %>
    <h2> You have not seeded users </h2>
  <% end %>
</div>

